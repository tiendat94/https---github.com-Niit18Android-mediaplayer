<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/tabs_bg_normal" />
        </shape>
    </item>

    <item
        android:bottom="0dp"
        android:left="-5dp"
        android:right="-5dp"
        android:top="-5dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="5dp"
                android:color="@color/tabs_bg_selected" />
        </shape>
    </item>
    <item
        android:bottom="-1dp"
        android:left="-1dp"
        android:right="-1dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/dim_foreground_disabled_material_dark" />
        </shape>
    </item>
</layer-list>