<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgSongs"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_play_bottom_layout"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/img_ic"
        android:layout_gravity="center_vertical"
        android:paddingLeft="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvSongName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Em Của Ngày Hôm Qua"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvSingName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sơn Tùng - MTP"
            android:textColor="#ff8c8c8c"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/tvTime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:paddingRight="20dp"
            android:text="03:46"
            android:textColor="#ff8c8c8c"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>